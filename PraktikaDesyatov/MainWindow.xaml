<Window x:Class="PraktikaDesyatov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PraktikaDesyatov" xmlns:Charting="clr-namespace:LiveCharts.Wpf.Charts.Base;assembly=LiveCharts.Wpf" xmlns:Charting1="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="AttendanceTextBox" Width="100" Margin="0 0 10 0"/>
            <Button Content="Add" Click="AddButton_Click"/>
        </StackPanel>
        <Canvas x:Name="AttendanceGraphCanvas" Grid.Row="1" Background="White" Margin="10"/>
    </Grid>
</Window>
